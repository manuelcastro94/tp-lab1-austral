<?xml version="1.0" encoding="UTF-8"?>
<web-app>

    <filter>
        <filter-name>Security Filter</filter-name>
        <filter-class>org.securityfilter.filter.SecurityFilter</filter-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/securityfilter-config.xml</param-value>
            <!--<description>Configuration file location (this is the default value)</description>-->
        </init-param>
        <init-param>
            <param-name>validate</param-name>
            <param-value>true</param-value>
            <!--<description>Validate config file if set to true</description>-->
        </init-param>
    </filter>
    <!-- map all requests to the SecurityFilter, org.studyroom.control.servlet what it does with configuration settings -->
    <filter-mapping>
        <filter-name>Security Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- make the session time-out after one minute -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>org.studyroom.control.servlet.useraction.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PostQuestionServlet</servlet-name>
        <servlet-class>org.studyroom.control.servlet.post.PostQuestionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PostQuestionServlet</servlet-name>
        <url-pattern>/postQuestion</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoadQuestionServlet</servlet-name>
        <servlet-class>org.studyroom.control.servlet.load.LoadQuestionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoadQuestionServlet</servlet-name>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PostServlet</servlet-name>
        <servlet-class>org.studyroom.control.servlet.post.PostServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PostServlet</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PostAnswerServlet</servlet-name>
        <servlet-class>org.studyroom.control.servlet.post.PostAnswerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PostAnswerServlet</servlet-name>
        <url-pattern>/postAnswer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditQuestionServlet</servlet-name>
        <servlet-class>org.studyroom.control.servlet.post.EditQuestionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditQuestionServlet</servlet-name>
        <url-pattern>/editQuestion</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginErrorServlet</servlet-name>
        <servlet-class>org.studyroom.control.servlet.load.LoginErrorServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginErrorServlet</servlet-name>
        <url-pattern>/loginerror</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CloseQuestionServlet</servlet-name>
        <servlet-class>org.studyroom.control.servlet.useraction.CloseQuestionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CloseQuestionServlet</servlet-name>
        <url-pattern>/close</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VoteUpAnswerServlet</servlet-name>
        <servlet-class>org.studyroom.control.servlet.useraction.VoteUpServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VoteUpAnswerServlet</servlet-name>
        <url-pattern>/up</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VoteDownAnswerServlet</servlet-name>
        <servlet-class>org.studyroom.control.servlet.useraction.VoteDownServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VoteDownAnswerServlet</servlet-name>
        <url-pattern>/down</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MarkAnswerServlet</servlet-name>
        <servlet-class>org.studyroom.control.servlet.useraction.MarkServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MarkAnswerServlet</servlet-name>
        <url-pattern>/mark</url-pattern>
    </servlet-mapping>

    <!-- SecurityFilter works with custom error pages -->
    <!--<error-page>-->
    <!--<error-code>403</error-code>-->
    <!--<location>/error/403.jsp</location>-->
    <!--</error-page>-->

</web-app>
